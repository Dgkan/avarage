import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int k, avg, value = 0, n = 0;
        Scanner inp = new Scanner(System.in);

        System.out.print("DeÄŸer giriniz: ");
        k = inp.nextInt();

        for (int i = 0; i <= k; i ++) {
            if (i % 3 == 0 && i % 4 == 0 ){
                value += i;
                n++;
            }
        }
        avg = value / n;
        System.out.println("Ortalama: " + avg);
    }
}
